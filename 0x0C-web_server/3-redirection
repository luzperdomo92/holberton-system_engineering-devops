#!/usr/bin/env bash
# Install nginx on your web-01 server.
# redirection permanently to another page.

apt-get update
apt-get -y install nginx
echo "Holberton School" > /var/www/html/index.html
sed -i '/root \/var\/www\/html;/a ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/sites-available/default
service nginx start
